<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
        'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace="br.gov.inpi.mapper.CessionarioMapper">


    <resultMap type="Cessionario" id="MarcaResult">
        <id property="id" column="ID"/>
    </resultMap>

    <insert id="inserir" parameterType="Cessionario" useGeneratedKeys="true" keyProperty="ID">
        INSERT INTO CESSIONARIO(PROTOCOLO_ID, RAZAO_SOCIAL)
        VALUES(#{protocolo.id}, #{razaoSocial})
    </insert>

    <select id="getCessionario" parameterType="Cessionario" resultType="Cessionario">
        SELECT ID, PROTOCOLO_ID, RAZAO_SOCIAL FROM CESSIONARIO
        WHERE PROTOCOLO_ID = #{protocolo.id}
        AND RAZAO_SOCIAL = #{razaoSocial}
    </select>

    <update id="atualizar" parameterType="Cessionario">
        UPDATE CESSIONARIO
        SET PROTOCOLO_ID = #{protocolo.id},
        RAZAO_SOCIAL = #{razaoSocial}
        WHERE ID = #{id}
    </update>

</mapper>