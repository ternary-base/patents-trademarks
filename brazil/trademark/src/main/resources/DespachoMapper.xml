<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
        'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace="br.gov.inpi.mapper.DespachoMapper">


    <resultMap type='Despacho' id='DespachoResult'>
        <id property='id' column='ID'/>
    </resultMap>

    <insert id='inserir' parameterType='Despacho' useGeneratedKeys='true' keyProperty='ID'>
        INSERT INTO DESPACHO(CODIGO, NOME)
        VALUES(#{codigo}, #{nome})
    </insert>


    <select id='getDespacho' parameterType='Despacho' resultType='Despacho'>
        SELECT ID, CODIGO, NOME from DESPACHO
        WHERE CODIGO = #{codigo}
    </select>

    <update id="atualizar" parameterType="Despacho">
        UPDATE DESPACHO
        SET CODIGO = #{codigo},
        NOME = #{nome}
        WHERE ID = #{id}
    </update>


</mapper>