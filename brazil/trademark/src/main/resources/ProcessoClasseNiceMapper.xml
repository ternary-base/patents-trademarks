<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
        'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace="br.gov.inpi.mapper.ProcessoClasseNiceMapper">


    <resultMap type="ProcessoClasseNice" id="ProcessoClasseNiceResult">
        <id property="id" column="ID"/>
    </resultMap>

    <insert id="inserir" parameterType="ProcessoClasseNice" useGeneratedKeys="true" keyProperty="ID">
        INSERT INTO PROCESSO_CLASSE_NICE(PROCESSO_ID, CLASSE_NICE_ID)
        VALUES(#{processo.id}, #{classeNice.id})
    </insert>


    <select id="getProcessoClasseNice" parameterType="ProcessoClasseNice" resultType="ProcessoClasseNice">
        SELECT ID, PROCESSO_ID, CLASSE_NICE_ID FROM PROCESSO_CLASSE_NICE
        WHERE PROCESSO_ID = #{processo.id}
        AND CLASSE_NICE_ID = #{classeNice.id}
    </select>

</mapper>